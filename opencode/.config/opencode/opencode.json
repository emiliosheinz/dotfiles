{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "model": "github-copilot/claude-sonnet-4.5",
  "small_model": "github-copilot/claude-haiku-4.5",
  "provider": {
    "github-copilot": {
      "options": {
        "timeout": 600000,
        "setCacheKey": true
      }
    }
  },
  "permission": {
    "edit": "allow",
    "bash": {
      "*": "allow",
      "git push --force*": "deny",
      "git push -f*": "deny",
      "git push origin main --force*": "deny",
      "git push origin master --force*": "deny",
      "rm -rf /*": "deny",
      "rm -rf ~/*": "deny",
      "rm -rf .*": "deny",
      "rm -fr /*": "deny",
      "rm -fr ~/*": "deny",
      "rm -fr .*": "deny",
      "sudo rm -rf*": "deny",
      "sudo rm -fr*": "deny",
      "chmod -R 777*": "deny",
      "dd if=*": "deny"
    }
  },
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "mcp": {
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ],
      "enabled": true
    }
  }
}
